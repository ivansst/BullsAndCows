@model BullsAndCows.Models.LoginModel
@{
    ViewData["Title"] = "Login";
}

<header>
    <link rel="stylesheet" href="~/css/style.css" />
</header>

<body>
    <form asp-action="Login" asp-controller="Account" method="post">
        <div class="form-group col-md-10">
            <label class="col-form-label">Username: </label>
            <input asp-for="UserName" type="text" class="form-control" />
            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
        </div>
        <div class="form-group mb-3 col-md-10">
            <label class="col-form-label">Password: </label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-success">Login</button>
        <label class="col-form-label registerLabel">Don't have an account?</label>
        <a asp-controller="Account" asp-action="Register" class="btn">Register</a>
    </form>
</body>
